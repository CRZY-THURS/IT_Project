<section class="addmusic-section">
<nav class="nav-top">

    <a href="/home"><img class="logo" src="/pictures/logo1.png"></a>

    <div class="dd-menu">
    <label for="touch"><i class='fas fa-user-cog' style='font-size:2.5rem;color:white;margin:1rem'></i></label>               
    <input type="checkbox" id="touch"> 
    <ul class="slide">
        <li><button class="profile"><a href="/profile" style='font-size:1.2rem;color:white'>Profile</a></button></li> 
        <li><form class="sign-out" action="/logout" method="post">
            <button class="logout" type="submit" style='font-size:1.2rem;color:white'>
                Log out
            </button>
        </form></li>
    </ul>
    </div>
</nav>

<form class="add-new" action="/addmusic" method="post">
    <div class="info_block">
        <label class="input_block" for="title">title</br>
        <input class="input_block"
            id="title"
            name="title"
            type="text"
            required
        />
    </div>
    <div class="info_block">
        <label class="input_block" for="artist">artist</br>
        <input class="input_block"
            id="artist"
            name="artist"
            type="text"
            required
        />
    </div>
    <div class="info_block">
        <label class="input_block" for="album">album</br>
        <input class="input_block"
            id="album"
            name="album"
            type="text"
        />
    </div>
    <label class="info_block">Genre
        <select class="info_block" class="info_block" name="genre">
        <option style="color: black" class="input_block" value="pop" selected>pop</option>
        <option style="color: black" class="input_block" value="indie">indie</option>
        <option style="color: black" class="input_block" value="rock">rock</option>
        <option style="color: black" class="input_block" value="rap">rap</option>
        <option style="color: black" class="input_block" value="classical">classical</option>
        </select>
    </label>
    <div class="info_block">
        <button class="btn-hover color-8" type="submit">Add Music</button>
    </div>
</form>
</section>