<section class="home-section">
<nav class="nav-top">

    <a href="/home"><img class="logo" src="/pictures/logo1.png"></a>

    <div class="dd-menu">
    <label for="touch"><i class='fas fa-user-cog' style='font-size:2.5rem;color:white;margin:1rem'></i></label>               
    <input type="checkbox" id="touch"> 
    <ul class="slide">
        <li><button class="profile"><a href="/profile" style='font-size:1.2rem;color:white'>Profile</a></button></li> 
        <li><button class="profile"><a href="javascript:a_post();" style='font-size:1.2rem;color:white'>Sign out</a></button></li>
    </ul>
    </div>
</nav>

<div style="display:'none'" > 
	<form id="a_post" action="/logout" method="post"></form>
</div>

<div class="nav-left">
    <p>Add New</p>
    <a href="/addplaylist">
        <button class="nav-button">+ Create Playlist</button>
    </a>
    <a href="/addmusic">
        <button class="nav-button">+ Add New Music</button>
    </a>

    <p>Library</p>
    <ul class="playlists">
        <li>
            {{#each defau}}
            
            <a href="/home/{{this._id}}">
                <button class="playlist">
                My Music
                </button>
            </a>
            {{/each}}
        </li>

        <li>
            <a href="/library"><button class="playlist">Browse music</button></a>
        </li>
        <li>
            <a href="/playlist-library"><button class="playlist">Browse playlists</button></a>
        </li>
    </ul>

    <p>Playlists</p>
    <ul class="playlists">
        <li>
            {{#each plays}}
            
            <a href="/home/{{this._id}}">
                <button class="playlist">
                {{this.name}}
                </button>
            </a>
            {{/each}}
        </li>
    </ul>
</div>

<div class="rhs">
    <img class="note-l" src="/pictures/note.png">
    <p class="library-name">Browse All Playlists</p>

        <form action="/playlist-library/search" method="post" class="search">
        <div class="info_block">
        <input class="input_block search_block"
            id="keyword"
            name="keyword"
            value="{{key}}"
            type="text"
            required
        />
        <button class="search-btn btn-hover color-9">Search</button type="submit">
        </div>
        </form>

    <table class="playlist-table" style="width:auto">
            <tr class="heading">
		        <th class="title" style="width:20%">Name</th>
		        <th class="title" style="width:20%">Description</th>
		        <th class="title" style="width:20%">Create date</th>
                <th class="title" style="width:20%">Music</th>
                <th class="title">Add to my music</th>
	        </tr>
            {{#each playlists}}
	        <tr class="entity" style="padding:0%;">
		        <td class="title" >{{p.name}}</td>
                <td class="title" >{{p.description}}</td>
                <td class="title" >{{showDate p.create_date}}</td>
                <td class="title" >{{showLength p.musics}}</td>
                {{#ifExist exist}}
                <td class="title" style="text-align: center;">Existed</td>
                {{else}}
                <td ><form action="/add-playlist-from-library/{{p._id}}" method="post"><button class="atm-btn btn-hover color-8">ADD</button type="submit"></form></td>
                {{/ifExist}}

	        </tr>
            {{/each}}
    </table>
    <br>
</div>
</section>