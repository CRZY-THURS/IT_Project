<form class="register" action="/signup" method="post">

    <div class="info_block">
        <label for="email">Username (email)</label></br>
        <input class="input_block"
            id="email" 
            name="email" 
            type="email"
            required 
        />
    </div>

    <div class="info_block">
        <label for="password">Password</label></br>
        <input class="input_block"
            id="password"
            name="password"
            type="text"
            minlength="8"
            required
        />
    </div>

    <div class="info_block">
        <label for="screen_name">Screen name</label></br>
        <input class="input_block"
        id="screen_name" 
        name="screen_name" 
        type="text" 
        required 
        />
    </div>

    <div>
        <button type="submit" class="bottons">Submit</button>
    </div>

    <div>
        <a href="/login">Return</a>
    </div>

</form>