
<nav class="nav-top">
    <div class="logo">
        <img src="/pictures/logo1.png" height="85px">
    </div>
</nav>

<form class="login" action="/login" method="post">
    {{#each flash}}
    <p class="error-login">{{this}}</p>
    {{/each}}
    
    <div class="info_block">
        <label for="username">Email</br>
        <input class="input_block"
            id="username"
            name="username"
            type="text"
            autocomplete="username"
            required
        />
    </div>
    <div class="info_block">
        <label for="password">Password</br>
        <input class="input_block"
            id="password"
            name="password"
            type="password"
            autocomplete="password"
            required
        />
    </div>
    <div>
        <button type="submit" class="btn-hover color-8">Log In</button>
    </div>

    <div style="margin-top: 2rem">
        <a href="./signup">Sign Up</br>
        <a href="./changepassword">Forgot Password</a>
    </div>
</form>

